      "targets": [{"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "sum by(topic) (kafka_topic_partitions{topic!=\"__consumer_offsets\"})", "legendFormat": "{{topic}}", "refId": "A"}],
      "title": "Partitions per topic",
      "type": "stat"
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
