      "targets": [{"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "up{job=\"kafka-exporter\"}", "legendFormat": "__auto", "refId": "A"}],
      "title": "Kafka exporter (Prometheus scrape)",
      "type": "stat"
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {"defaults": {"color": {"mode": "palette-classic"}, "custom": {"align": "auto", "displayMode": "auto"}, "mappings": [], "thresholds": {"mode": "absolute", "steps": [{"color": "green", "value": null}]}}, "overrides": [{"matcher": {"id": "byName", "options": "topic"}, "properties": [{"id": "displayName", "value": "Topic"}]}, {"matcher": {"id": "byName", "options": "Value"}, "properties": [{"id": "displayName", "value": "Partitions"}]}]},
      "gridPos": {"h": 4, "w": 18, "x": 6, "y": 0},
